<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.palmayor">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SignUpEnfermeroActivity"></activity>
        <activity
            android:name=".activities.InceptionActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activities.WelcomeActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activities.SignUpActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.EnfermeroActivity" />
        <activity android:name=".fragments.DetalleAbueloFragment" />
        <activity android:name=".fragments.ListaAbuelosFragment" />
    </application>

</manifest>